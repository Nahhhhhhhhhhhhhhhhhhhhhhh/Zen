<body>

    <h1>Zen Hub</h1>

    <button class="button main-btn" onclick="openMain()">Main</button>

    <div id="mainHub" class="hidden">
        <button class="button aura-btn" onclick="openAuraKill()">Aura Kill</button>
    </div>

    <div id="auraKillOptions" class="hidden">
        <p>Activate Aura Kill?</p>
        <button class="button option-btn" onclick="activateAuraKill()">Use</button>
        <button class="button option-btn" onclick="closeAuraKill()">Not</button>
    </div>

    <script>
        function openMain() {
            document.getElementById("mainHub").classList.toggle("hidden");
        }

        function openAuraKill() {
            document.getElementById("auraKillOptions").classList.toggle("hidden");
        }

        function activateAuraKill() {
            alert("Aura Kill Activated!");
        }

        function closeAuraKill() {
            document.getElementById("auraKillOptions").classList.add("hidden");
        }
    </script>

